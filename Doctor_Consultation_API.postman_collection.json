{
  "info": {
    "name": "Doctor Consultation API",
    "description": "API Collection for Doctor Consultation App with Chat and Payment Integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"patient@example.com\",\n  \"password\": \"password123\",\n  \"fullname\": \"Patient Test\",\n  \"phone\": \"+6281234567890\",\n  \"role\": \"PATIENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Doctor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"doctor@example.com\",\n  \"password\": \"password123\",\n  \"fullname\": \"Doctor Test\",\n  \"phone\": \"+6281234567891\",\n  \"role\": \"DOCTOR\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"pasien1@email.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Consultations",
      "item": [
        {
          "name": "Get Available Doctors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/consultations/doctors/available",
              "host": ["{{baseUrl}}"],
              "path": ["api", "consultations", "doctors", "available"]
            }
          }
        },
        {
          "name": "Create Consultation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": \"doctor_id_here\",\n  \"title\": \"Konsultasi Demam\",\n  \"description\": \"Sudah 3 hari mengalami demam tinggi disertai batuk\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/consultations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "consultations"]
            }
          }
        },
        {
          "name": "Get My Consultations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/consultations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "consultations"]
            }
          }
        },
        {
          "name": "Get Consultation Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/consultations/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "consultations", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "consultation_id_here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"consultationId\": \"consultation_id_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments"]
            }
          }
        },
        {
          "name": "Get Payment History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payments/history",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "history"]
            }
          }
        },
        {
          "name": "Check Payment Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payments/:id/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", ":id", "status"],
              "variable": [
                {
                  "key": "id",
                  "value": "payment_id_here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"consultationId\": \"consultation_id_here\",\n  \"content\": \"Halo dokter, saya ingin berkonsultasi\",\n  \"messageType\": \"TEXT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/messages",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages"]
            }
          }
        },
        {
          "name": "Get Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/consultation/:consultationId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", "consultation", ":consultationId"],
              "variable": [
                {
                  "key": "consultationId",
                  "value": "consultation_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/unread/count",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", "unread", "count"]
            }
          }
        }
      ]
    },
    {
      "name": "File Upload",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "upload"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin - Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Create Doctor Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"specialization\": \"Dokter Umum\",\n  \"licenseNumber\": \"STR-003-2024\",\n  \"experience\": 3,\n  \"education\": \"S1 Kedokteran Universitas Brawijaya\",\n  \"consultationFee\": 100000,\n  \"bio\": \"Dokter umum dengan pengalaman 3 tahun\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/:userId/doctor-profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", ":userId", "doctor-profile"],
              "variable": [
                {
                  "key": "userId",
                  "value": "doctor_user_id_here"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
